<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" 
    xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.tenonx.tools</groupId>
    <artifactId>exm-runner</artifactId>
    <version>1.0.0</version>
    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <exm.maven.execution.repository></exm.maven.execution.repository>
        <exm.maven.execution.artifact.group></exm.maven.execution.artifact.group>
        <exm.maven.execution.artifact.id></exm.maven.execution.artifact.id>
        <exm.maven.execution.artifact.version></exm.maven.execution.artifact.version>
        <exm.maven.execution.main-class></exm.maven.execution.main-class>
        <exm.maven.execution.boot-version>2.1.0.RELEASE</exm.maven.execution.boot-version>
        <spring-boot.version>${exm.maven.execution.boot-version}</spring-boot.version>
        <spring-boot.run.main-class>${exm.maven.execution.main-class}</spring-boot.run.main-class>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${exm.maven.execution.artifact.group}</groupId>
            <artifactId>${exm.maven.execution.artifact.id}</artifactId>
            <version>${exm.maven.execution.artifact.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <repositories>
        <repository>
            <id>exm-maven-runner-repos</id>
            <url>${exm.maven.execution.repository}</url>
            <releases>
                <checksumPolicy>warn</checksumPolicy>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </releases>
            <snapshots>
                <checksumPolicy>warn</checksumPolicy>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>exm-maven-runner-repos</id>
            <url>${exm.maven.execution.repository}</url>
        </pluginRepository>
    </pluginRepositories>
</project>
